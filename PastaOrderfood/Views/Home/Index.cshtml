@{
    ViewBag.Title = "Pastas(首頁)";
    var a = ViewBag.carousel.Count;
}

@section css{

    <style>
        .carousel-indicators .ctrlLine {
            width: 10px;
            height: 10px;
            border-radius: 10px;
        }

        body {
            background-color: rgb(41, 43, 44);
        }

        .pp {
            top: -10%;
            left: 0%;
            width: 100%;
            height: 100%;
            padding-top: 16%;
        }

        .carousel-item {
            height: 85vh;
            width: 100%;
        }

            .carousel-item img {
                height: 85vh;
                width: 100%;
            }

        .info {
            height: 15vh;
            width: 100%;
        }

        #area {
            width: 100%;
            /* height: 100vh; */
            height: 100%;
            position: absolute;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 1;
            top: 0;
            left: 0;
        }

        @@media screen and (max-width: 576px) {
            .pp {
                top: 0%;
                left: 0%;
                width: 100%;
                height: 100%;
                padding-top: 16%;
            }
        }

        .infoArea {
            overflow: hidden;
            margin-bottom: 5%;
        }

            .infoArea img {
                transition: all 0.8s;
                opacity: 0.75;
                filter: brightness(0.8);
                width: 100%;
                height: 100%
            }

                .infoArea img:hover {
                    cursor: pointer;
                    opacity: 1;
                    filter: brightness(1);
                    transform: scale(1.5, 1.5)
                }
    </style>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#1").attr("class","active");
        });

    </script>    
}


<div class="carousel slide " data-ride="carousel" id="Picshow" data-interval="8000">

    <ul class="carousel-indicators ">

        <li data-target="#Picshow" data-slide-to="0" class="active ctrlLine" />
        @for (var i = 1; i < a; i++)
        {
            <li data-target="#Picshow" data-slide-to="0" class=" ctrlLine" />
        }

    </ul>
    <div class="carousel-inner">
        @foreach (var item in ViewBag.carousel)
        {
            if (@item.rowid == 1)
            {
                <div class="carousel-item active">
                    <img src="@item.img_bg" alt="" class="d-flex ">
                    <div id="area">
                        <div class="carousel-caption container-fluid pp">
                            <div class="row ">
                                <div class="col-sm-6 col-12 ">
                                    <figure>
                                        <img src="@item.img" alt="" class="w-50 h-50 img-fluid">
                                    </figure>
                                </div>
                                <div class="col-sm-6 col-12 text-sm-left ">
                                    <p class="display-2 ">@item.context_computer<span class="d-none d-sm-block">@item.context_phone</span></p>
                                    @Html.ActionLink("Order!", "Menu", "Home", new { @class = "btn btn-outline-success btn-lg" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="@item.img_bg" alt="" class="d-flex ">
                    <div id="area">
                        <div class="carousel-caption container-fluid pp">
                            <div class="row ">
                                <div class="col-sm-6 col-12 ">
                                    <figure>
                                        <img src="@item.img" alt="" class="w-50 h-50 img-fluid">
                                    </figure>
                                </div>
                                <div class="col-sm-6 col-12 text-sm-left ">
                                    <p class="display-2 ">@item.context_computer<span class="d-none d-sm-block">@item.context_phone</span></p>
                                    @Html.ActionLink("Order!", "Menu", "Home", new { @class = "btn btn-outline-success btn-lg" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }




        }


    </div>
    <a href="#Picshow" data-slide="prev" class="carousel-control-prev"><span class="carousel-control-prev-icon"></span></a>
    <a href="#Picshow" data-slide="next" class="carousel-control-next"><span class="carousel-control-next-icon"></span></a>
</div>

<div class="row  p-0 m-0 mt-1 ">
    <div class="col-12 col-sm-4 bg-dark">
        <p class="text-warning"><i class="fa fa-map-marker fa-lg mr-2"></i>Location </p>
        <p class="text-light">台北市中正區北平西路3號 </p>
    </div>
    <div class="col-12 col-sm-4 bg-dark">
        <p class="text-warning"><i class="fa fa-phone fa-lg mr-2"></i>Phone </p>
        <p class="text-light">00-4520000</p>
    </div>
    <div class="col-12 col-sm-4 bg-info">
        <p class="mt-4 ml-3 "><a class="text-light" href="https://zh-tw.facebook.com/"><i class="fa fa-facebook-square fa-2x"></i></a><a class="text-light ml-3" href="https://twitter.com/?lang=zh-tw"><i class="fa fa-twitter-square fa-2x"></i></a></p>
    </div>
</div>


<div class="row m-0  mt-2">
    <div class="col-sm-6 col-md-4 offset-md-2  infoArea "><img src="~/bg/g1.jpg" alt="" class="img-fluid"></div>
