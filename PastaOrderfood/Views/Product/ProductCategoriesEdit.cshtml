@model PastaOrderfood.Models.Categories

@{
    ViewBag.Title = "ProductCategoriesEdit";
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}

<div class="text-center">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>種類編輯</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.category_id)

            <div class="form-group ">
                <p>種類</p>
                <div class="col-md-10 centerblock">
                    @Html.EditorFor(model => model.category_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.category_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 centerblock">
                    <input type="submit" value="儲存" class="btn btn-primary" />
                    @Html.ActionLink("取消", "ProductCategoriesIndex", "Product", new { @class="btn btn-danger"})
                </div>
            </div>
        </div>
    }

</div>

